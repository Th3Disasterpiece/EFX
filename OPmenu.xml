          <label>Null Out</label>
          <scriptPath>$EFX_OUT_TOOLS/scripts/python/out_tools/null_out.py</scriptPath>
        </scriptItem>

        <scriptItem id="merge_out">
          <label>Merge Out</label>
          <scriptPath>$EFX_OUT_TOOLS/scripts/python/out_tools/merge_out.py</scriptPath>
